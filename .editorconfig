# editorconfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
charset = utf-8

# 4 space indentation
[*.css]
indent_style = space
indent_size = 4

# 4 space indentation
[*.groovy]
indent_style = space
indent_size = 4

# 4 space indentation
[*.gsp]
indent_style = space
indent_size = 4
